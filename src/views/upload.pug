extends base

block content
    //- if errorMessage 
        //- span=errorMessage 
    div#upload__container
        form(method="POST", enctype="multipart/form-data")
            input(placeholder="File", value="selected file").upload__name
            label(for="video") Choose Video 
            input(type="file", accept="video/*", placeholder="Choose File", id="video", name="video").upload__video
            input(name="title", placeholder="Title", required, type="text", maxlength=80)
            input(name="description", placeholder="Description", required, type="text", minlength=20)
            input(name="hashtags", placeholder="Hashtags, separated by comma.", required, type="text")
            input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/upload.js")